#include <iostream>

using namespace std;

int main()
{
    int numA;
    int numB;
    int operacao;

    cout << "Digite o primeiro numero: " << endl;

    cin >> numA;

    cout << "Digite o segundo numero: " << endl;
    cin >>  numB;

    cout << "Agora digite a operação que deseja realizar : 1 - soma | 2 - subtracao | 3 - divisao | 4 - multiplicacao " << endl;
    cin >> operacao;

    switch(operacao){
    int resultado;
    case 1:
       resultado = numA + numB;
       cout << numA << " + " << numB << " = " << resultado;
       break;

    case 2:
        resultado = numA - numB;
        cout << numA << " - " << numB << " = " << resultado;
        break;

    case 3:
        resultado = numA / numB;
        cout << numA << " / " << numB << " = " << resultado;
        break;

    case 4:
        resultado = numA * numB;
        cout << numA << " X " << numB << " = " << resultado;
        break;

    default:
        cout << "Operacao invalida";
    }
    while(1){};
    return 0;
}
